{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur {{ user.username }}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('success') %}
        <div class="alert alert-success" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="row bg-white shadow-sm rounded p-4">
        <div class="col-8 d-flex justify-content-start">
            <div ><i class="fa-solid fa-user" style="font-size: 50px; color: #35A8AD"></i></div>
<div class="mx-2">
identifiant : <b>{{ user.username }}</b><br>
    Note : <b>{{ user.average }}/5</b><br>
    Numéro de téléphone : <a href="tel:{{ user.phoneNumber }}">{{ user.phoneNumber }}</a>
</div>
        </div>
        <div class="col-4 d-flex justify-content-end py-2">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Ajouter une note</button>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Donner une note à {{ user.username }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(userDetailsForm) }}
                    {{ form_row(userDetailsForm.note) }}
                    {{ form_row(userDetailsForm.comment) }}
                    <div class="modal-footer">
                        {{ form_row(userDetailsForm.submit) }}
                    </div>
                    {{ form_end(userDetailsForm) }}
                </div>

            </div>
        </div>
    </div>
        </div>
    </div>
    {% if adverts  %}
        <p class="mt-3">Annonces publiées par {{ user.username }} :</p>
        <div class="row mt-4 m-auto">
            {% for advert in adverts %}
                <div class="col-8 card mb-3 mx-2" style="max-width: 940px;">
                    <div class="row g-0">
                        <div class="col-md-5">
                            <img src="{{ vich_uploader_asset(advert, 'imageFile') }}" width="250"  height="250" style="object-fit: cover" width="200" height="200px" alt="...">
                        </div>
                        <div class="col-md-7">
                            <div class="card-body">
                                <a class="text-decoration-none" href="{{ path('app_advert_show', {'id': advert.id}) }}">
                                    <h5 class="card-title">{{ advert.title }}</h5>
                                </a>
                                <p class="card-text">{{ advert.price }}</p>
                                <small class="text-muted">{{ advert.createdAt|date("d/m/Y à h:m","Europe/Paris") }}</small>
                                <p class="card-text"> {{ advert.description|u.truncate(100, '...') }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>

    {% else %}
        <p>Cet utilisateur n'a pas encore créé d'annonce.</p>
    {% endif %}
{% endblock %}