{% extends 'base.html.twig' %}

{% block title %}Advert{% endblock %}

{% block body %}

<div class="row">
    <div class="col-9" >
        <div style="min-height: 400px;" class="d-flex justify-content-between align-items-center">
        <img width="600" class="rounded mx-auto d-block" src="{{ vich_uploader_asset(advert, 'imageFile') }}" alt="">
        </div>
        <div class="">
            <div class="d-flex justify-content-between"><h1 class="my-3">{{ advert.title }}</h1>
                <small class="mt-3">Publiée : {{ advert.createdAt|date('d/m/Y à H:i') }}</small></div>

            <h2>Prix : {{ advert.price }} Dhs</h2>
            <div class="text-justify mt-4">
                <h3>Description</h3>
                <p>{{ advert.description }}</p>

            </div>


        </div>
    </div>
    <div class="col-3">
        <div class="card">
            <div class="card-body m-2">
                <div class="row">
                    <div class="col-4" ><i class="fa-solid fa-user" style="font-size: 50px; color: #35A8AD"></i></div>
                    <div class="col-8">
                        <h5 class="card-title">{{ user.username }}</h5>
                        <p>Note : {{ user.average }}/5</p>
                    </div>
                </div>
                <div class="row"><a href="{{ path('app_user_details',{'id':user.id}) }}" class="btn btn-primary mt-2">Voir le profil</a></div>
                <div class="row"><button class="btn btn-outline-primary mt-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Numéro de téléphone</button>
                    <div class="collapse" id="collapseExample">
                        <div class="card card-body">
                            <a  href="tel:{{ user.phoneNumber }}">{{ user.phoneNumber }}</a>
                        </div>
                    </div></div>
                </div>
        </div>
    </div>

    </div>


{% endblock %}
